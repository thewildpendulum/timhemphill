{{#each posts}}
	<div class="post" id="{{name}}">
		<h2> {{title}} </h2>
		<p> {{preview}} </p>
		<p> <a href="/blog/{{post.name}}"> Read more... </a> </p>
		Posted: <span> {{dateCreated}} </span>
		Tags: <span> {{tags}} </span>
	</div>
{{/each }}

<div class="sideView">
	<ul>
		{{#each tags}}
			<li class="tag" id="{{name}}"> {{name}} </li>
		{{/each}}
	</ul>
</div>